# ============================
# BUILD
# ============================
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build

WORKDIR /src

# Copy everything
COPY . .

# Restore
RUN dotnet restore CityVoice.csproj

# Publish
RUN dotnet publish CityVoice.csproj -c Release -o /app


# ============================
# RUNTIME
# ============================
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime

WORKDIR /app

COPY --from=build /app .

ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "CityVoice.dll"]
